# Application
APP_NAME=Shipment Bot
DEBUG=false

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/shipment_bot

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# WhatsApp Gateway (Node.js microservice with WPPConnect)
WHATSAPP_GATEWAY_URL=http://localhost:3000
# Optional WhatsApp group ID for courier broadcasts (use @g.us suffix)
WHATSAPP_COURIER_GROUP_ID=

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Credit settings
DEFAULT_CREDIT_LIMIT=-100.0
DELIVERY_FEE=10.0
